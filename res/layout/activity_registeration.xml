<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Registration">

    <TextView
        android:id="@+id/reg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50mdp"
        android:layout_marginBottom="20dp"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="#2E7D32"
        android:textSize="@dimen/_30mdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50mdp"
        android:hint="Enter The User Name"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/contentTextColor" />

    <EditText
        android:id="@+id/email"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:hint="Enter The Email"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/contentTextColor" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:hint="Enter the Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/contentTextColor" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/refer_earn_button"
        android:padding="@dimen/_10mdp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#0C0C0C"
        android:textSize="@dimen/_17mdp" />

    <TextView
        android:id="@+id/LoginNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Click to Login Page"
        android:textColor="#2E7D32"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>