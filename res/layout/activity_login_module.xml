<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Login_Module">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/login_text"
        android:textAlignment="center"
        android:textColor="#2D9E32"
        android:textSize="@dimen/_30mdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ema_il"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/enter_the_email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#041403"
        android:visibility="visible" />


    <EditText
        android:id="@+id/pass_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:hint="@string/enter_the_password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#100F0F" />

    <ProgressBar
        android:id="@+id/progress_Bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/refer_earn_button"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#0C0C0C"
        android:textSize="@dimen/_17mdp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/reg_now"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/click_to_register_page"
        android:textColor="#05770A"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>